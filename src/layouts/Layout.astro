---
import '../styles/global.css';
import { getUrl } from '../utils/url';
import { getTranslation, type Language, SUPPORTED_LANGUAGES } from '../i18n';

const {
	title = 'Javier Salgado â€” Portafolio',
	description = 'Desarrollador .NET & Angular. Portafolio y proyectos.',
	canonical,
	lang = 'es' as Language
} = Astro.props;

const siteTitle = 'Javier Salgado';
const t = (key: string) => getTranslation(lang, key);

// Calcular URL del idioma alterno
const alternateLanguage = lang === 'es' ? 'en' : 'es';
const currentPath = Astro.url.pathname;
const alternateUrl = currentPath.replace(`/${lang}/`, `/${alternateLanguage}/`);
---
<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href={getUrl('/favicon.svg')} />
    {canonical && <link rel="canonical" href={canonical} />}
    
    <!-- Script inline para evitar flash de contenido (debe ejecutarse ANTES del render) -->
    <script is:inline>
      (function() {
        const stored = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const theme = stored || (prefersDark ? 'dark' : 'light');
        
        // console.log('ðŸŽ¨ Inicializando tema:', {
        //   stored: stored,
        //   prefersDark: prefersDark,
        //   theme: theme
        // });
        
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        }
        document.documentElement.style.colorScheme = theme;
        
        if (!stored) {
          localStorage.setItem('theme', theme);
        }
      })();
    </script>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href={getUrl('/styles/theme-overrides.css')}>
  </head>
  <body class="min-h-screen antialiased bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100 transition-colors duration-300">
    
    <header class="sticky top-0 backdrop-blur-sm border-b border-gray-200 dark:border-gray-800 bg-white/90 dark:bg-gray-900/90 z-50 transition-colors duration-300">
      <nav class="mx-auto container px-4 py-3 flex items-center justify-between">
        <a href={getUrl(`/${lang}/`)} class="font-extrabold tracking-tight text-gray-900 dark:text-gray-100 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">{siteTitle}</a>
        <div class="flex items-center gap-2 sm:gap-3 md:gap-4 text-xs sm:text-sm">
          <a class="hover:underline hover:text-blue-600 dark:hover:text-blue-400 px-1 text-gray-700 dark:text-gray-300 transition-colors" href={getUrl(`/${lang}/`)}>{t('nav.home')}</a>
          <a class="hover:underline hover:text-blue-600 dark:hover:text-blue-400 px-1 text-gray-700 dark:text-gray-300 transition-colors" href={getUrl(`/${lang}/projects`)}>{t('nav.projects')}</a>
          <a class="hover:underline hover:text-blue-600 dark:hover:text-blue-400 px-1 text-gray-700 dark:text-gray-300 transition-colors" href="https://github.com/LaShavi" target="_blank" rel="noopener">{t('nav.github')}</a>
          <a class="hover:underline hover:text-blue-600 dark:hover:text-blue-400 px-1 text-gray-700 dark:text-gray-300 transition-colors" href="https://www.linkedin.com/in/javier-salgado-arismendy-961956122" target="_blank" rel="noopener">{t('nav.linkedin')}</a>

          <!-- Desktop Controls (Hidden on Mobile) -->
          <div class="hidden md:flex items-center gap-2">
            <!-- Language Switcher -->
            <a 
              href={alternateUrl}
              class="inline-flex items-center gap-1.5 px-2 sm:px-2.5 py-1.5 sm:py-2 rounded-lg border border-gray-200 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-800 hover:border-gray-300 dark:hover:border-gray-600 transition-all ml-1 sm:ml-2 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400"
              title={lang === 'es' ? 'Switch to English' : 'Cambiar a EspaÃ±ol'}
            >
              {lang === 'es' ? (
                <>
                  <img 
                    src={getUrl('/images/flag-usa.svg')} 
                    alt="English" 
                    class="w-5 h-4" 
                    width="20" 
                    height="16"
                  />
                  <span class="text-xs sm:text-sm font-semibold">EN</span>
                </>
              ) : (
                <>
                  <img 
                    src={getUrl('/images/flag-colombia.svg')} 
                    alt="EspaÃ±ol" 
                    class="w-5 h-4" 
                    width="20" 
                    height="16"
                  />
                  <span class="text-xs sm:text-sm font-semibold">ES</span>
                </>
              )}             
            </a>

            <button 
              id="themeToggle" 
              onclick="toggleTheme()"
              class="p-1.5 sm:p-2 rounded-lg border border-gray-200 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-800 hover:border-gray-300 dark:hover:border-gray-600 transition-all ml-1 sm:ml-2 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400"
              aria-label={t('theme.dark')}
              title={t('theme.light')}
            >
              <img 
                src={getUrl('/images/icon-sun.svg')} 
                alt={t('theme.light')} 
                class="w-4 h-4 sm:w-5 sm:h-5 dark:hidden" 
                width="20" 
                height="20"
              />
              <img 
                src={getUrl('/images/icon-moon.svg')} 
                alt={t('theme.dark')} 
                class="w-4 h-4 sm:w-5 sm:h-5 hidden dark:block" 
                width="20" 
                height="20"
              />
            </button>
          </div>

        </div>
      </nav>
    </header>

    <main class="mx-auto container px-4 py-10">
      <slot />
    </main>

    <footer class="mx-auto container px-4 pb-10 text-sm text-gray-500 dark:text-gray-400 text-center"> 
      Â© {new Date().getFullYear()} {siteTitle}. {t('footer.copyright').replace('{year}', new Date().getFullYear().toString())}
      <a href="https://astro.build" target="_blank" rel="noopener" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">{t('footer.astro')}</a> + 
      <a href="https://tailwindcss.com" target="_blank" rel="noopener" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">{t('footer.tailwind')}</a>
    </footer>

    <!-- Floating Action Button (Mobile Only) -->
    <div class="fixed bottom-6 right-6 md:hidden flex gap-3 z-40">
      <!-- Language Button -->
      <a 
        href={alternateUrl}
        class="flex items-center justify-center w-14 h-14 rounded-full bg-blue-500 hover:bg-blue-600 dark:bg-blue-600 dark:hover:bg-blue-700 text-white shadow-lg hover:shadow-xl transition-all transform hover:scale-110"
        title={lang === 'es' ? 'Switch to English' : 'Cambiar a EspaÃ±ol'}
      >
        <img 
          src={lang === 'es' ? getUrl('/images/flag-usa.svg') : getUrl('/images/flag-colombia.svg')}
          alt={lang === 'es' ? 'English' : 'EspaÃ±ol'}
          class="w-7 h-5.5"
          width="28"
          height="22"
        />
      </a>

      <!-- Theme Button -->
      <button 
        id="themeToggle"
        onclick="toggleTheme()"
        class="flex items-center justify-center w-14 h-14 rounded-full bg-gray-700 hover:bg-gray-800 dark:bg-gray-600 dark:hover:bg-gray-700 text-white shadow-lg hover:shadow-xl transition-all transform hover:scale-110"
        aria-label={t('theme.dark')}
        title={t('theme.light')}
      >
        <img 
          src={getUrl('/images/icon-sun.svg')} 
          alt={t('theme.light')} 
          class="w-6 h-6 dark:hidden" 
          width="24" 
          height="24"
        />
        <img 
          src={getUrl('/images/icon-moon.svg')} 
          alt={t('theme.dark')} 
          class="w-6 h-6 hidden dark:block" 
          width="24" 
          height="24"
        />
      </button>
    </div>
    
    <script src={getUrl('/scripts/theme-toggle.js')} defer></script>
  </body>
</html>