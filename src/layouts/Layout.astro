---
import '../styles/global.css';
import { getUrl } from '../utils/url';

const {
	title = 'Javier Salgado â€” Portafolio',
	description = 'Desarrollador .NET & Angular. Portafolio y proyectos.',
	canonical
} = Astro.props;

const siteTitle = 'Javier Salgado';
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href={getUrl('/favicon.svg')} />
    {canonical && <link rel="canonical" href={canonical} />}
    
    <!-- Script inline para evitar flash de contenido (debe ejecutarse ANTES del render) -->
    <script is:inline>
      (function() {
        const stored = localStorage.getItem('theme');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        const theme = stored || (prefersDark ? 'dark' : 'light');
        
        console.log('ðŸŽ¨ Inicializando tema:', {
          stored: stored,
          prefersDark: prefersDark,
          theme: theme
        });
        
        if (theme === 'dark') {
          document.documentElement.classList.add('dark');
        }
        document.documentElement.style.colorScheme = theme;
        
        if (!stored) {
          localStorage.setItem('theme', theme);
        }
      })();
    </script>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href={getUrl('/styles/theme-overrides.css')}>
  </head>
  <body class="min-h-screen antialiased bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100 transition-colors duration-300">
    
    <header class="sticky top-0 backdrop-blur-sm border-b border-gray-200 dark:border-gray-800 bg-white/90 dark:bg-gray-900/90 z-50 transition-colors duration-300">
      <nav class="mx-auto container px-4 py-3 flex items-center justify-between">
        <a href={getUrl('/')} class="font-extrabold tracking-tight text-gray-900 dark:text-gray-100 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">{siteTitle}</a>
        <div class="flex items-center gap-2 sm:gap-3 md:gap-4 text-xs sm:text-sm">
          <a class="hover:underline hover:text-blue-600 dark:hover:text-blue-400 px-1 text-gray-700 dark:text-gray-300 transition-colors" href={getUrl('/')}>Inicio</a>
          <a class="hover:underline hover:text-blue-600 dark:hover:text-blue-400 px-1 text-gray-700 dark:text-gray-300 transition-colors" href={getUrl('/projects')}>Proyectos</a>
          <a class="hover:underline hover:text-blue-600 dark:hover:text-blue-400 px-1 text-gray-700 dark:text-gray-300 transition-colors" href="https://github.com/LaShavi" target="_blank" rel="noopener">GitHub</a>
          <a class="hover:underline hover:text-blue-600 dark:hover:text-blue-400 px-1 text-gray-700 dark:text-gray-300 transition-colors" href="https://www.linkedin.com/in/javier-salgado-arismendy-961956122" target="_blank" rel="noopener">LinkedIn</a>

          <button 
            id="themeToggle" 
            class="p-1.5 sm:p-2 rounded-lg border border-gray-200 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-800 hover:border-gray-300 dark:hover:border-gray-600 transition-all ml-1 sm:ml-2 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400"
            aria-label="Alternar tema"
            title="Cambiar tema"
          >
            <img 
              src={getUrl('/images/icon-sun.svg')} 
              alt="Modo claro" 
              class="w-4 h-4 sm:w-5 sm:h-5 dark:hidden" 
              width="20" 
              height="20"
            />
            <img 
              src={getUrl('/images/icon-moon.svg')} 
              alt="Modo oscuro" 
              class="w-4 h-4 sm:w-5 sm:h-5 hidden dark:block" 
              width="20" 
              height="20"
            />
          </button>

        </div>
      </nav>
    </header>

    <main class="mx-auto container px-4 py-10">
      <slot />
    </main>

    <footer class="mx-auto container px-4 pb-10 text-sm text-gray-500 dark:text-gray-400 text-center"> 
      Â© {new Date().getFullYear()} {siteTitle}. Hecho con 
      <a href="https://astro.build" target="_blank" rel="noopener" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Astro</a> + 
      <a href="https://tailwindcss.com" target="_blank" rel="noopener" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Tailwind CSS</a>
    </footer>
    
    <script src={getUrl('/scripts/theme-toggle.js')} defer></script>
  </body>
</html>