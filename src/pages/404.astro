--- 
import Layout from '../layouts/Layout.astro';

// Helper para rutas con base path
function getUrl(path: string) {
  const base = import.meta.env.BASE_URL;
  // Asegurar que base termine con / y path empiece con /
  const normalizedBase = base.endsWith('/') ? base : base + '/';
  const normalizedPath = path.startsWith('/') ? path.slice(1) : path;
  return normalizedBase + normalizedPath;
}
--- 
<Layout title="Página no encontrada — Javier">
  <div class="text-center py-24 space-y-4">
    <h1 class="text-5xl font-extrabold">404</h1>
    <p>Ups, no encontré esa ruta.</p>
    <a href={getUrl("/")} class="underline">Volver al inicio</a>
  </div>
</Layout>